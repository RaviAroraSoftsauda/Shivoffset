        </div>
        </form>
  </div>
      </section>
    </div>
    <div class="col-md-7">
      <section class="content-header">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">View Accessories Master </h3>
                  <p style="text-align: center;color:#ff0000;margin-top: -20px;"></p>
          </div>
            <div class="box-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                  <thead>
                      <tr>
                        <th>#</th>
                        <th>Type</th>
                        <th>Sub Type</th>
                        <th>Description</th>
                        <th>Manuacturer</th>
                        <th>Machine</th>
                        <th>Min Stk</th>
                        <th>Qty opening</th>
                        <th width="10%">Update</th>
                        <th width="10%">Delete</th>
                      </tr>
                  </thead>
                 <tbody>
                   {{#each accessories as |value key|}}
                      <tr>
                          <td>{{sum @index 1}}</td>
                          <td>{{this.accestyp_name.accessriestyp_name}}</td>
                          <td>{{this.accessubtyp_name.accessubtyp_name}}</td>
                          <td>{{this.accessories_desc}}</td>
                          <td>{{this.manufactur_name.manufactur_name}}</td>
                          <td>{{this.machine_name.machine_name}}</td>
                          <td>{{this.accessoriesmin_stk}}</td>
                          <td>{{this.accessoriesqty_pen}}</td>
                          <td><a href="javascript:void(0);"  class="edit_accessories" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                          <td><a href="javascript:void(0);" class="delete_accessories" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                      </tr>
                     {{/each}}  
                   </tbody>
                </table>
      </div>
    </div>
  </div>
      </section>
    </div>
    
  </div>
</div>
