<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-5">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Accessories Master</h3>
      <h3 class="box-title" id="edit" style="display: none">Update Accessories Master</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/accessories_mast/add" class="form-horizontal"  method="post" id="accessories_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
            <label class="col-md-4">Type</label>
            <div class="col-md-8"> 
                 <select class="form-control accestyp_name" name="accestyp_name" id="accestyp_name" required="">
                 <option>----Select Type----</option>
                {{#each accessriestyp}}
                <option value="{{this._id}}" data-accessriestyp="{{this._id}}">{{this.accessriestyp_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Sub Type </label>
            <div class="col-md-8"> 
                 <select class="form-control" name="accessubtyp_name" id="accessubtyp_name" required="">
                 <option>----Select Sub Type----</option>
                {{#each accessubtyp}}
                <option value="{{this._id}}" data-accessriestyp="{{this._id}}">{{this.accessubtyp_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Description</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="accessories_desc" id="accessories_desc" placeholder="Description" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Manuacturer</label>
            <div class="col-md-8"> 
                <select class="form-control manufactur_name" name="manufactur_name" id="manufactur_name" required="">
                 <option>----Select Manuacturer----</option>
                {{#each manufactur}}
                <option value="{{this._id}}" data-manufactur="{{this._id}}">{{this.manufactur_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Machine</label>
            <div class="col-md-8"> 
                <select class="form-control machine_name" name="machine_name" id="machine_name">
                 <option value="">----Select Machine----</option>
                {{#each machine}}
                <option value="{{this._id}}" data-machine="{{this._id}}">{{this.machine_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Min Stk</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="accessoriesmin_stk" id="accessoriesmin_stk" placeholder="Min Stk">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Qty opening</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="accessoriesqty_pen" id="accessoriesqty_pen" placeholder="Qty opening">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-info pull-right" value="submit" id="submit">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update" style="display:none;">
        </div>
        </form>
