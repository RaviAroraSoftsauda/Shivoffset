<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-5">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Blanket Master</h3>
      <h3 class="box-title" id="edit" style="display: none">Update Blanket Master</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/blankettyp_mast/add" class="form-horizontal"  method="post" id="blanket_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
            <div class="form-group">
            <label class="col-md-4">Blanket Name</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_name" name="blanket_name" id="blanket_name" placeholder="Blanket Name" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Blanket Type /UPS</label>
            <div class="col-md-8 state_name_div"> 
                <input type="text" class="form-control blanketyp_ups" name="blanketyp_ups" id="blanketyp_ups" placeholder="Blanket Type /UPS" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Size</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_size" name="blanket_size" id="blanket_size" placeholder="Size" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Blanket IN</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_in" name="blanket_in" id="blanket_in" placeholder="Blanket IN" required="">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-info pull-right" value="submit" id="submit">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update" style="display:none;">
        </div>
        </form>
         <form action="" class="form-horizontal"  method="post" id="edit_blanket" style="display:none">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
            <div class="form-group">
            <label class="col-md-4">Blanket Name</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_name" name="blanket_name" id="blanket_name" placeholder="Blanket Name" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Blanket Type /UPS</label>
            <div class="col-md-8 state_name_div"> 
                <input type="text" class="form-control blanketyp_ups" name="blanketyp_ups" id="blanketyp_ups" placeholder="Blanket Type /UPS" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Size</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_size" name="blanket_size" id="blanket_size" placeholder="Size" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Blanket IN</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control blanket_in" name="blanket_in" id="blanket_in" placeholder="Blanket IN" required="">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update">
        </div>
        </form>
  </div>
      </section>
    </div>
    <div class="col-md-7">
      <section class="content-header">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">View Blanket Type Master </h3>
                  <p style="text-align: center;color:#ff0000;margin-top: -20px;"></p>
          </div>
            <div class="box-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                  <thead>
                      <tr>
                        <th>#</th>
                        <th>Blanket Name</th>
                        <th>Blanket Type /UPS</th>
                        <th>Size</th>
                        <th>Blanket IN</th>
                        <th width="10%">Update</th>
                        <th width="10%">Delete</th>
                      </tr>
                  </thead>
                 <tbody>
                   {{#each blanket as |value key|}}
                      <tr>
                          <td>{{sum @index 1}}</td>
                          <td>{{this.blanket_name}}</td>
                          <td>{{this.blanketyp_ups}}</td>
                          <td>{{this.blanket_size}}</td>
                          <td>{{this.blanket_in}}</td>
                          <td><a href="javascript:void(0);"  class="edit_blanket" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                          <td><a href="javascript:void(0);" class="delete_blanket" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                      </tr>
                     {{/each}}  
                   </tbody>
                </table>
      </div>
    </div>
  </div>
      </section>
    </div>
    
  </div>
</div>
 {{> footer}}
