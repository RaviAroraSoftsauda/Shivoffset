      <section class="content-header">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">View Machine Master </h3>
                  <p style="text-align: center;color:#ff0000;margin-top: -20px;"></p>
          </div>
            <div class="box-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                   {{!-- {{machine}} --}}
                  <thead>
                      <tr>
                        <th>#</th>
                        <th>Machine Name</th>
                        <th>Code</th>
                        <th>Manufacturer</th>
                        <th>Installation date</th>
                        <th>Cost</th>
                        <th>Maintainance interval [Days]</th>
                        <th>Installation Certificate</th>
                        <th>(Upload PDF Option)</th>
                        <th>Department</th>
                        <th>Location</th>
                        <th width="10%">Update</th>
                        <th width="10%">Delete</th>
                      </tr>
                  </thead>
                 <tbody>
                  
                   {{#each machine as |value key|}}
                      <tr>
                          <td>{{sum @index 1}}</td>
                          <td>{{this.machine_name}}</td>
                          <td>{{this.machine_code}}</td>
                          <td>{{this.machine_manufctur.manufactur_name}}</td>
                          <td>{{this.machine_insdt}}</td>
                          <td>{{this.machine_cost}}</td>
                          <td>{{this.machine_maintint}}</td>
                          <td>{{this.machine_inscrt}}</td>
                          <td><a href="{{this.filepath}}" target='_blank' alt="pdf Not Found">Click</a></td>
                          {{!--<img src="{{this.filepath}}" target="_blank" height="50" width="50"/> --}}
                          <td>{{this.machine_deprt.departmnt_name}}</td>
                          <td>{{this.machine_loction}}</td>
                          <td><a href="javascript:void(0);"  class="edit_machine" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                          <td><a href="javascript:void(0);" class="delete_machine" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                      </tr>
                     {{/each}}  
                   </tbody>
                </table>
      </div>
