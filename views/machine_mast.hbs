  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Machine Master</h3>
      <h3 class="box-title" id="edit" style="display: none">Update Machine Master</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/machine_mast/add" class="form-horizontal" enctype="multipart/form-data"  method="post" id="machine_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
            <label class="col-md-4">Machine Name</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_name" id="machine_name" placeholder="Machine Name" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Code</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_code" id="machine_code" placeholder="Code" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Manufacturer</label>
            <div class="col-md-8"> 
              <select class="form-control machine_manufctur" name="machine_manufctur" id="machine_manufctur" required="">
                 <option>----Select Manuacturer----</option>
                {{#each manufuctur}}
                <option value="{{this._id}}" data-manufactur="{{this._id}}">{{this.manufactur_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
            <div class="form-group">
            <label class="col-md-4">Installation date</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_insdt" id="machine_code" placeholder="Code" required="">
            </div>
          </div>
            <div class="form-group">
            <label class="col-md-4">Cost</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_cost" id="machine_code" placeholder="Cost" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Maintainance interval [Days]</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_maintint" id="machine_maintint" placeholder="Maintainance interval [Days]" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Installation Certificate</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_inscrt" id="machine_inscrt" placeholder="Installation Certificate" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">(Upload PDF Option)</label>
            <div class="col-md-8"> 
                <input type="file" class="form-control" name="machine_pdf" id="machine_pdf">
            </div>
          </div>
            <div class="form-group">
            <label class="col-md-4">Department</label>
            <div class="col-md-8"> 
              <select class="form-control machine_deprt" name="machine_deprt" id="machine_deprt">
                 <option value="">----Select Department----</option>
                {{#each departmnt}}
                <option value="{{this._id}}" data-departmnt="{{this._id}}">{{this.departmnt_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">Location</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="machine_loction" id="machine_loction" placeholder="Location">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-info pull-right" value="submit" id="submit">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update" style="display:none;">
        </div>
        </form>
