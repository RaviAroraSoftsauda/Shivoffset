<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-5">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Pantone Master</h3>
      <h3 class="box-title" id="edit" style="display: none">Update Pantone Master</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/pantone_mast/add" class="form-horizontal"  method="post" id="pantone_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
            <label class="col-md-4">Pantone No</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="pantone_descrpton" id="pantone_descrpton" placeholder="Description" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Color name</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="pantone_color" id="pantone_color" placeholder="Color name" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">RGB Values</label>
            <div class="col-md-2"> 
                <input type="color" class="form-control" value="" name="pantone_" id="pantone_c" placeholder="RGB Values" style="width: 52px;" required="">
            </div>
             <div class="col-md-2"> 
                <input type="text" class="form-control" name="pantone_colorg" id="pantone_colorg" placeholder="RGB Values" style="margin-left: -8px;width: 70px;">
            </div>
             <div class="col-md-2"> 
                <input type="text" class="form-control" name="pantone_colorb" id="pantone_colorb" placeholder="RGB Values" style="width: 70px;margin-left: -28px;">
            </div>
            <div class="col-md-2"> 
                <input type="text" class="form-control" name="pantone_colorr" id="pantone_colorb" placeholder="RGB Values" style="width: 70px;margin-left: -28px;">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">HTML Code</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control" name="pantone_htmlcode" id="pantone_htmlcode" placeholder="HTML Code" required="">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-info pull-right" value="submit" id="submit">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update" style="display:none;">
        </div>
        </form>
         <form action="" class="form-horizontal"  method="post" id="edit_pantone" style="display:none">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
            <label class="col-md-4">Pantone No</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control pantone_descrpton" name="pantone_descrpton" id="pantone_descrpton" placeholder="Description" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4">Color name</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control pantone_color" name="pantone_color" id="pantone_color" placeholder="Color name" required="">
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-4">RGB Values</label>
            <div class="col-md-2"> 
                <input type="color" class="form-control" value="" name="pantone_" id="pantone_c" placeholder="RGB Values" style="width: 52px;" required="">
            </div>
             <div class="col-md-2"> 
                <input type="text" class="form-control pantone_colorg" name="pantone_colorg" id="pantone_colorg" placeholder="RGB Values" style="margin-left: -8px;width: 70px;">
            </div>
             <div class="col-md-2"> 
                <input type="text" class="form-control pantone_colorb" name="pantone_colorb" id="pantone_colorb" placeholder="RGB Values" style="width: 70px;margin-left: -28px;">
            </div>
            <div class="col-md-2"> 
                <input type="text" class="form-control pantone_colorr" name="pantone_colorr" id="pantone_colorb" placeholder="RGB Values" style="width: 70px;margin-left: -28px;">
            </div>
           </div>
           <div class="form-group">
            <label class="col-md-4">HTML Code</label>
            <div class="col-md-8"> 
                <input type="text" class="form-control pantone_htmlcode" name="pantone_htmlcode" id="pantone_htmlcode" placeholder="HTML Code" required="">
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update">
        </div>
        </form>
  </div>
      </section>
    </div>
    <div class="col-md-7">
      <section class="content-header">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">View Pantone Master </h3>
                  <p style="text-align: center;color:#ff0000;margin-top: -20px;"></p>
          </div>
            <div class="box-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                  <thead>
                      <tr>
                        <th>#</th>
                        <th>Description</th>
                        <th>Color name</th>
                        <th>RGB Values</th>
                        <th>HTML Code</th>
                        <th width="10%">Update</th>
                        <th width="10%">Delete</th>
                      </tr>
                  </thead>
                 <tbody>
                   {{#each pantone as |value key|}}
                      <tr>
                          <td>{{sum @index 1}}</td>
                          <td>{{this.pantone_descrpton}}</td>
                          <td>{{this.pantone_color}}</td>
                          <td>{{this.pantone_colorr}},{{this.pantone_colorb}},{{this.pantone_colorg}}</td>
                          <td>{{this.pantone_htmlcode}}</td>
                          <td><a href="javascript:void(0);"  class="edit_pantone" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                          <td><a href="/pantone_mast/delete_pantone/{{value._id}}" onclick="return confirm('Are you sure want to delete.');"><i class="fa fa-trash-o" style="color:red;"></i></a></td>
                      </tr>
                     {{/each}}  
                   </tbody>
                </table>
      </div>
    </div>
  </div>
      </section>
    </div>
    
  </div>
</div>
 {{> footer}}
