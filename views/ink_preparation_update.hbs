<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-12">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Update Ink Preparation Report</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/ink_preparation/update/{{inkpreparation.id}}" class="form-horizontal"  method="post" id="city_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
            <div class="form-group">
             <label class="col-md-2">Ref No</label>
            <div class="col-md-2"> 
                <input type="number" class="form-control" name="ref_no" id="ref_no" value="{{inkpreparation.ref_no}}"  required="">
            </div>
             <label class="col-md-2">Date</label>
             <div class="col-md-2"> 
              <input type="text" class="form-control" name="ink_date" id="filterstartdate" value="{{inkpreparation.ink_date}}" placeholder="Date" required="">
            </div>
            <label class="col-md-2">Employee Name</label>
            <div class="col-md-2"> 
               {{#listrtcomp employee inkpreparation.ink_employeename 'ink_employeename' 'ink_employeename'}}
                    {{this.employee_name}}
              {{/listrtcomp}}
               {{!-- <select class="form-control" name="ink_employeename" id="ink_employeename">
                  <option value="">Select Employee</option>
                   {{#each employee}}
                  <option value="{{this._id}}" data-employee="{{this._id}}">{{this.employee_name}}</option>
                  {{/each}}
                </select> --}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <table class="table" width="100%">
                <thead style="background-color:#f39c12;color: #fff;font-size: 15px;">
                  <tr>
                    <th>Pantone No</th>
                    <th>Board </th>
                    <th>Production Qty</th>
                    <th>Delete</th>
                  </tr>
                </thead>
               <tbody>
              {{#each inkpreparation.ink_preparation as |value key|}}
              <tr class='ink_preparation_wrapper' id='rohit{{@index}}'>
             <td>
              <select class="form-control" name="ink_preparation[{{@index}}][pantoneno]" id="pantoneno" style='width:100%;'>
                  <option value="">----Select Pantone No----</option>
                   {{#each ../stockpantone}}
                  <option value="{{this._id}}" data-stockpantone="{{this._id}}" {{#equal ../pantoneno this._id}}selected=""{{/equal}}>{{this.stockpantone_pantonno.pantone_descrpton}}</option>
                  {{/each}}
                </select>
             </td>
            <td>
               <select class="form-control" name='ink_preparation[{{@index}}][board]'  id='board'>
                 <option value="">----Select Board----</option>
                {{#each ../accbord}}
                <option value="{{this._id}}" data-pantone="{{this._id}}" {{#equal ../board this._id}}selected=""{{/equal}}>{{this.accessories_desc}}</option>
                {{/each}}
              </select>
              </td>
             <input type="hidden" name="cntrer{{@index}}" value="{{@index}}" id="cntrer{{@index}}" class="form-control" style="width: 102px;">
            <td><input type='text' class="form-control" name='ink_preparation[{{@index}}][productionqty]' value="{{this.productionqty}}" id='productionqty'  style='width:100%;' placeholder="Production Qty"></td>
           <td>
               {{#notequal @index 0}}
                      <a onclick='remove_ink({{@index}});' style='cursor:pointer;'><i class='fa fa-times' style='font-size: 20px;color: red;margin-left:12px;'></i></a>
              {{/notequal}}
            </td>
        </tr>
        {{/each}}
         <tr  id="insert_inkpreation">
               </tr>
      </tbody>
      <tr>
      </tr>
    </table>
    </div> 
    <center><a class="ddinkpreparation" style="font-size: 30px;cursor:pointer;"><i class="fa fa-plus" aria-hidden="true"></i></a></center>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-success pull-right" value="submit" id="submit">
        </div>
        </form>
  </div>
      </section>
    </div>
