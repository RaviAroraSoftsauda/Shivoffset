<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-12">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Update Accessories Issue Note</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/accessories_issue_note/update/{{recepitissue.id}}" class="form-horizontal" method="post" id="supplier_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
             <label class="col-md-3">Ref No</label>
            <div class="col-md-2"> 
              <input type="text" class="form-control" name="c_j_s_p" id="c_j_s_p" value="{{recepitissue.c_j_s_p}}" placeholder="Ref No">
            </div>
             <div class="col-md-2"> 
                 <input type="number" class="form-control" name="ref_no" value="{{recepitissue.ref_no}}" id="ref_no" >
                
            </div>
            <label class="col-md-2">Date</label>
            <div class="col-md-3"> 
                <input type="text" class="form-control" name="acc_date" value="{{recepitissue.acc_date}}" id="filterstartdate" placeholder="Date" required="">
            </div>
          </div>
           <div class="form-group">
             <label class="col-md-3">Department</label>
            <div class="col-md-9"> 
               {{#listrtcomp departmnt recepitissue.acc_department 'acc_department' 'acc_department'}}
                        {{this.departmnt_name}}
              {{/listrtcomp}}
            </div>
          </div>
           <div class="form-group">
             <label class="col-md-3">Supplier Invoice</label>
            <div class="col-md-3"> 
                <input type="text" class="form-control" name="acc_invoice" value="{{recepitissue.acc_invoice}}" id="acc_invoice" placeholder="Supplier Invoice" required="">
            </div>
            <label class="col-md-3">Date</label>
            <div class="col-md-3"> 
                <input type="text" class="form-control" name="acc_supdt" value="{{recepitissue.acc_supdt}}" id="offerenddate" placeholder="Date" required="">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <table class="table" width="100%">
                <thead style="background-color:#008d4c;color: #fff;font-size: 15px;">
                  <tr>
                    <th>Type</th>
                    <th>Sub Type</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Location</th>
                    <th>Batch No</th>
                    <th>Job card No</th>
                    <th>Delete</th>
                  </tr>
                </thead>
               <tbody>
                 {{#each recepitissue.acc_note_item as |value key|}}
              <tr class="recepitissue_variation_row" id="recepitissue_variation_row-{{@index}}">
             <td>
              <select class="form-control stockpantone_deprt" name="acc_note_item[{{@index}}][type]" onchange='getproduct({{@index}})' id="type{{@index}}" style='width:100%;'>
                  <option value="">----Select Type----</option>
                   {{#each ../accessriestyp}}
                   <option value="{{this._id}}" data-accessriestyp="{{this._id}}" {{#equal ../type this._id}}selected=""{{/equal}}>{{this.accessriestyp_name}}</option>
                {{/each}}
                </select>
             </td>
              <td class="subtypname{{@index}}">
                 <select class="form-control"name='acc_note_item[{{@index}}][subtyp]' id="subtyp{{@index}}" style='width:100%;'>
                  {{!-- <option value="">----Select Type----</option> --}}
                   <option value="">----Select Sub Type----</option>
                  {{#each ../accessubtyp}}
                  <option value="{{this._id}}" data-accessriestyp="{{this._id}}" {{#equal ../subtyp this._id}}selected=""{{/equal}}>{{this.accessubtyp_name}}</option>
                  {{/each}}
                </select>
                </td>
            <td class="productname{{@index}}">
              <select class="form-control stockpantone_deprt"name='acc_note_item[{{@index}}][product]' id="type{{@index}}" style='width:100%;'>
                  <option value="">----Select Type----</option>
                   {{#each ../accessories}}
                   <option value="{{this._id}}" data-accessories="{{this._id}}" {{#equal ../product this._id}}selected=""{{/equal}}>{{this.accessories_desc}}</option>
                {{/each}}
                </select>
              </td>
             <input type="hidden" name="cntrer{{@index}}" value="{{@index}}" id="cntrer{{@index}}" class="form-control" style="width: 102px;text-align: -webkit-right;">
            <td><input type='number' class="form-control" name='acc_note_item[{{@index}}][qty]' id='qty{{@index}}' value="{{this.qty}}" oninput="calc({{@index}})" style='width:100%;text-align: -webkit-right;' placeholder="Qty"></td>
            <td>
               <select class="form-control stockpantone_deprt" name="acc_note_item[{{@index}}][location]" id="location" style='width:100%;'>
                  <option value="">----Select Location----</option>
                    {{#each ../rackloc}}
                   <option value="{{this._id}}" data-rackloc="{{this._id}}" {{#equal ../location this._id}}selected=""{{/equal}}>{{this.rackloc_name}}</option>
                {{/each}}
                </select>
            </td>
            <td><input type='text' class="form-control" name='acc_note_item[{{@index}}][batchno]' value="{{this.batchno}}"  id='batchno' style='width:100%;' placeholder="Batch No"></td>
            <td><input type='text' class="form-control" name='acc_note_item[{{@index}}][jobcrdno]' value="{{this.jobcrdno}}"  id='jobcrdno' style='width:100%;' placeholder="Job card No"></td>
            <td>
               {{#notequal @index 0}}
                      <a  data-repeater-delete="{{@index}}" class='recepitissue-delete-btn' style='cursor:pointer;'><i class='fa fa-times' style='font-size: 20px;color: red;margin-left: 12px;margin-top: 7px;'></i></a>
              {{/notequal}}
            </td>
        </tr>
        {{/each}}
         <tr  id="insert_stockitem">
               </tr>
      </tbody>
      <tr>
      </tr>
    </table>
    </div> 
      <label class="col-md-2"></label>
            <label class="col-md-4"><b style="margin-left: 152px;">Total</b></label>
            <div class="col-md-3"> 
                <input type="number" class="form-control" name="acc_totalqty" value="{{recepitissue.acc_totalqty}}" placeholder="Total QTY" id="total_qty" style="margin-left: -146px;width: 142px;text-align: -webkit-right;" readonly>
            </div>
    </div>
    <center><a class="addissuenote" style="font-size: 30px;cursor:pointer;"><i class="fa fa-plus" aria-hidden="true"></i></a></center>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <input type="submit" class="btn btn-success"  value="update" id="update">
           <input type="reset" class="btn btn-default pull-right" value="Clear Form">  
        </div>
        </form>
  </div>
      </section>
    </div>
  </div>
</div>
 {{> footer}}
