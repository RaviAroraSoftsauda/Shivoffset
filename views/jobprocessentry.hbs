<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-12">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Job Process Entry </h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/jobprocessentry/add" class="form-horizontal"  method="post" id="accessories_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
           <div class="form-group">
            <label class="col-md-1">Entry No</label>
            <div class="col-md-2"> 
              <input type="number" class="form-control" name="jobprcss_entryno" id="jobprcss_entryno" value="{{maxentryno jobprocess}}">
            </div>
            <label class="col-md-1">Date</label>
            <div class="col-md-2"> 
               <input type="text" class="form-control" name="jobprcss_date" id="filterstartdate" placeholder="Date">
            </div>
             <label class="col-md-1">Department</label>
            <div class="col-md-2"> 
                <select class="form-control prdt_pname" name="jobprcss_deprt" id="jobprcss_deprt" required>
                 <option value="">----Select Department----</option>
                {{#each departmnt}}
                <option value="{{this._id}}" data-departmnt="{{this._id}}">{{this.departmnt_name}}</option>
                {{/each}}
              </select>
            </div>
             <label class="col-md-1">Activity</label>
            <div class="col-md-2 activity_name_div"> 
                <select class="form-control jobprcss_activity" name="jobprcss_activity" id="jobprcss_activity" disabled>
                 <option value="">----Select Activity----</option>
                   {{#each jobactivty}}
                <option value="{{this._id}}" data-active="{{this._id}}">{{this.jobactivty_actvnm}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-group">
             <label class="col-md-1">Job Card No</label>
            <div class="col-md-2">
              <input type="text" class="form-control"  name="newjb_jbcrd" id="newjb_jbcrd">
            </div>
             <label class="col-md-1">Product Name</label>
            <div class="col-md-2 product_name">
              <input type="text" class="form-control" name="jobprcss_productname" id="jobprcss_productname">
            </div>
             <label class="col-md-1">Item code</label>
            <div class="col-md-2 item_code">
              <input type="text" class="form-control" name="jobprcss_itemcode" id="jobprcss_itemcode">
            </div>
          </div>
          <div class='form-group activity_group_div'></div>
        </div>
        <!-- /.box-body -->
       
         
          <div class="box-footer">
           <input type="reset" class="btn btn-default" value="Clear Form">
              <input type="submit" class="btn btn-info pull-right" value="submit" id="submit">
              <input type="submit" class="btn btn-success pull-right"  value="update" id="update" style="display:none;">
        </div>
        </form>
  </div>
      </section>
    </div>
    
  </div>
</div>
 {{> footer}}
