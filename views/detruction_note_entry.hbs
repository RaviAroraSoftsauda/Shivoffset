<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="row">
    <div class="col-md-12">
      <section class="content-header">
         
         
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title" id="add">Destruction Note Entry</h3>
          {{#if err}}
          <div class="alert alert-danger">
          <strong>{{err}}</strong>
          </div>
          {{/if}}
          {{#if errors}}
          <div class="alert alert-danger">
          <strong>{{errors}}</strong>
          </div>
          {{/if}}
      <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
    </div>
       <form action="/plate_issuance_note/add" class="form-horizontal" method="post" id="supplier_add">
          <h4 style="color: red;text-align: center;"></h4>
        <div class="box-body">
          <div class="form-group">
             <label class="col-md-3">Enter Book/No</label>
            <div class="col-md-2"> 
                <input type="number" class="form-control" name="ref_no" id="ref_no" required="">
            </div>
             <div class="col-md-2"> 
                <input type="text" class="form-control" name="c_j_s_p" id="c_j_s_p" value="PIN">
            </div>
            <label class="col-md-2">Date</label>
            <div class="col-md-3"> 
                <input type="text" class="form-control" name="acc_date" id="filterstartdate" placeholder="Date" required="">
            </div>
          </div>
           <div class="form-group">
             <label class="col-md-3">Stage</label>
            <div class="col-md-4"> 
                <select class="form-control" name="stage" id="stage">
                  <option value="">--Select Stage--</option>
                  <option value="Superseeded">Superseeded</option>
                  <option value="Existing">Existing</option>
                </select>
            </div>
             <label class="col-md-2">Department</label>
            <div class="col-md-3"> 
               <select class="form-control" name='from_ltcon'  id='from_ltcon'>
                    <option value="">-Select Department-</option>
                    {{#each departmnt}}
                    <option value="{{this._id}}" data-departmnt="{{this._id}}">{{this.departmnt_name}}</option>
                    {{/each}}
                   </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <table class="table" width="100%">
                <thead style="background-color:#dd4b39;color: #fff;font-size: 15px;">
                  <tr>
                    <th>Prod Code</th>
                    <th>Prod Name</th>
                    <th>Customer</th>
                    <th>Remarks</th>
                    <th>Location</th>
                    <th>Delete</th>
                  </tr>
                </thead>
               <tbody>
              <tr>
                <td><input type='text' class="form-control" name='p_i_n[0][jobcrdno]' onkeyup="fname(0);"  id='jobcrdno0' style='width:100%;' placeholder="Prod Code"></td>
                <td><input type='text' class="form-control" name='p_i_n[0][procode]'  id='procode' style='width:100%;' placeholder="Prod Name"></td>
                <td><input type='text' class="form-control" name='p_i_n[0][prdtname]'  id='prdtname' style='width:100%;' placeholder="Customer"></td>
                <td><input type='text' class="form-control" name='p_i_n[0][custumer]'  id='custumer' style='width:100%;' placeholder="Remarks"></td>
                <input type="hidden" name="cntrer0" value="0" id="cntrer0" class="form-control" style="width: 102px;">
                <td><input type='text' class="form-control" name='p_i_n[0][typctpts]' id="typctpts"  style='width:100%;' placeholder="Location"></td>
                
        </tr>
         <tr  id="insert_stockitem">
               </tr>
      </tbody>
      <tr>
      </tr>
    </table>
    </div> 
    </div>
    <center><a class="addpin" style="font-size: 30px;cursor:pointer;"><i class="fa fa-plus" aria-hidden="true"></i></a></center>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
           <input type="submit" class="btn btn-info" value="submit" id="submit">
           <input type="reset" class="btn btn-default pull-right" value="Clear Form">  
        </div>
        </form>
  </div>
      </section>
    </div>
  </div>
</div>
 {{> footer}}
